<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/white_line_at_the_left_of_rectangle"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/pink_line_at_the_bottom_of_rectangle"
        app:layout_constraintEnd_toStartOf="@+id/pink_line_at_the_left_of_rectangle"
        app:layout_constraintTop_toTopOf="@+id/white_line_at_the_top_of_rectangle" />

    <View
        android:id="@+id/pink_line_at_the_left_of_rectangle"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#958492"
        app:layout_constraintBottom_toBottomOf="@+id/myRectangleView"
        app:layout_constraintEnd_toStartOf="@+id/myRectangleView"
        app:layout_constraintTop_toTopOf="@+id/myRectangleView" />

    <View
        android:id="@+id/white_line_at_the_top_of_rectangle"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/pink_line_at_the_top_of_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/pink_line_at_the_right_of_rectangle"
        app:layout_constraintStart_toStartOf="@+id/pink_line_at_the_left_of_rectangle" />

    <View
        android:id="@+id/pink_line_at_the_top_of_rectangle"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#958492"
        app:layout_constraintBottom_toTopOf="@+id/myRectangleView"
        app:layout_constraintEnd_toEndOf="@+id/myRectangleView"
        app:layout_constraintStart_toStartOf="@+id/pink_line_at_the_left_of_rectangle" />

    <View
        android:id="@+id/pink_line_at_the_bottom_of_rectangle"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E4D4E4"
        app:layout_constraintEnd_toEndOf="@+id/myRectangleView"
        app:layout_constraintStart_toStartOf="@+id/pink_line_at_the_left_of_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView" />

    <View
        android:id="@+id/white_line_at_the_bottom_of_rectangle"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FEF5FF"
        app:layout_constraintEnd_toEndOf="@+id/black_line_at_the_right_of_rectangle"
        app:layout_constraintStart_toStartOf="@+id/white_line_at_the_left_of_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/white_line_at_the_left_of_rectangle" />

    <View
        android:id="@+id/pink_line_at_the_right_of_rectangle"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#E4D4E4"
        app:layout_constraintBottom_toBottomOf="@+id/pink_line_at_the_bottom_of_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/myRectangleView"
        app:layout_constraintStart_toEndOf="@+id/myRectangleView"
        app:layout_constraintTop_toTopOf="@+id/pink_line_at_the_top_of_rectangle" />

    <View
        android:id="@+id/black_line_at_the_right_of_rectangle"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#FEF5FF"
        app:layout_constraintBottom_toBottomOf="@+id/pink_line_at_the_bottom_of_rectangle"
        app:layout_constraintStart_toEndOf="@+id/white_line_at_the_top_of_rectangle"
        app:layout_constraintTop_toTopOf="@+id/white_line_at_the_top_of_rectangle" />

    <View
        android:id="@+id/dashed_line_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/pink_line_at_the_top_of_rectangle"
        app:layout_constraintEnd_toStartOf="@+id/pink_line_at_the_right_of_rectangle"
        app:layout_constraintStart_toEndOf="@+id/pink_line_at_the_left_of_rectangle"
        app:layout_constraintBottom_toTopOf="@+id/pink_line_at_the_bottom_of_rectangle" />


    <View
        android:id="@+id/myRectangleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin = "2dp"
        android:background="#E4D4E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/dashed_lines"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dotted_line_horizontal"
        android:layerType="software"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintEnd_toEndOf="@+id/dashed_line_box"
        app:layout_constraintStart_toStartOf="@+id/dashed_line_box"
        app:layout_constraintBottom_toBottomOf="@+id/dashed_line_box"
        app:layout_constraintTop_toTopOf="@+id/dashed_line_box"/>



</androidx.constraintlayout.widget.ConstraintLayout>